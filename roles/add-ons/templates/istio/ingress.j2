  namespace: istio-system
spec:
  rules:
  - host: {{ istio_ingress_prometheus_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: prometheus
          servicePort: 9090
---
apiVersion: apps/v1
kind: Ingress
metadata:
  name: tracing
  namespace: istio-system
spec:
  rules:
  - host: {{ istio_ingress_tracing_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: tracing
          servicePort: 80
---
apiVersion: apps/v1
