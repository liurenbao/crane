apiVersion: apps/v1
kind: Ingress
metadata:
  name: grafana
  namespace: istio-system
  labels:
    app: grafana
  annotations:
spec:
  rules:
  - host: {{ istio_ingress_grafana_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: grafana
          servicePort: 3000
---
apiVersion: apps/v1
