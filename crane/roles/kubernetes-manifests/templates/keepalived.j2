kind: Pod
apiVersion: v1
metadata:
  annotations:
    scheduler.alpha.kubernetes.io/critical-pod: ""
  labels:
    component: keepalived
    tier: control-plane
  name: keepalived
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: keepalived
    image: slzcc/keepalived:1.2.25
    env:
    - name: VIRTUAL_IP
      value: {{ k8s_load_balance_ip }}
    - name: INTERFACE
      value: {{ vip_bind_net_device }}
    - name: VIRTUAL_MASK
      value: "24"
    - name: CHECK_IP
      value: any
    - name: CHECK_PORT
      value: "6443"
    - name: VRID
      value: "53"
    - name: TZ
      value: "{{ time_location }}"
    volumeMounts:
    - mountPath: /usr/share/zoneinfo
      name: usr-local-timezone
      readOnly: true
    resources:
      requests:
        cpu: 100m
    securityContext:
      privileged: true
      capabilities:
        add:
        - NET_ADMIN
  volumes:
  - hostPath:
      path: /usr/share/zoneinfo
      type: DirectoryOrCreate
    name: usr-local-timezone
